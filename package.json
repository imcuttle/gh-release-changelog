{
  "name": "gh-release-changelog",
  "version": "1.0.2-beta.2",
  "description": "JavaScript Action Template",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepublishOnly": "ncc build action.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepublishOnly && npm run test",
    "version": "npm run changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imcuttle/gh-release-changelog.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Release",
    "ChangeLog"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/actions/javascript-action/issues"
  },
  "homepage": "https://github.com/actions/javascript-action#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepublishOnly && git add dist"
    }
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@lerna/package": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "@moyuyc/visit-tree": "^4.0.2",
    "escape-string-regexp": "^4.0.0",
    "globby": "^11.1.0",
    "load-json-file": "^6.2.0",
    "lodash.pick": "^4.4.0",
    "mdast-util-to-string": "^2.0.0",
    "p-map": "^4.0.0",
    "read-json-file": "^1.0.1",
    "read-yaml-file": "^2.1.0",
    "remark": "^13.0.0"
  },
  "devDependencies": {
    "@moyuyc/husky": "^2.0.0",
    "@vercel/ncc": "^0.31.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.5.1"
  }
}
